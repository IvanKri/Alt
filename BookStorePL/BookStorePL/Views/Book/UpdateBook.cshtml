
@model BookStorePL.Models.BookViewModel
@{
    ViewBag.Title = "UpdateBook";
    Layout = "/Views/MasterView/MasterView.cshtml";
}

@using (Html.BeginForm("UpdateBook", "Book", null, FormMethod.Post, new { @class = "form-inline" }))
{
    @Html.HiddenFor(Model => Model.Id)
    <div class="form-group">
        <label for="name">Название</label>
        @Html.EditorFor(Model => Model.Name, new { @class = "form-control", @id = "name" })
    </div>
    <div class="form-group">
        <label for="author">Автор</label>
        @Html.EditorFor(Model => Model.Author, new { @class = "form-control", @id = "author" })
    </div>
    <div class="form-group">
        <label for="year">Год выпуска</label>
        @Html.EditorFor(Model => Model.Year, new { @class = "form-control", @id = "year" })
    </div>
    <input type="submit" class="btn btn-default" value="Отправить" />
}